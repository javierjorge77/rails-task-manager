
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
<i class="fa-solid fa-trash-can"></i>
    <% end %>


<%= link_to edit_task_path(@task) do %>
<i class="fa-sharp fa-solid fa-pen-to-square"></i>
<% end %>
